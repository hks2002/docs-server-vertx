{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "VertxApp-Dev",
      "request": "launch",
      "mainClass": "com.da.docs.VertxApp",
      "args": [
        "com.da.docs.WebServerVerticle",
        "--options=src/main/resources/vertx-options.json",
        "--conf=src/main/resources/config-dev.json"
      ],
      "vmArgs": [
        "-Dlog4j.skipJansi=false",
        "-Dlog4j.configurationFile=${workspaceFolder}/src/test/resources/log4j2.xml"
      ]
    },
    {
      "type": "java",
      "name": "VertxApp-Prod",
      "request": "launch",
      "mainClass": "com.da.docs.VertxApp",
      "args": [
        "com.da.docs.WebServerVerticle",
        "--options=src/main/resources/vertx-options.json",
        "--conf=src/main/resources/config-prod.json"
      ],
      "vmArgs": [
        "-Dlog4j.skipJansi=false",
        "-Dlog4j.configurationFile=${workspaceFolder}/src/main/resources/log4j2.xml"
      ]
    }
  ]
}